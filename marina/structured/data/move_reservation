CREATE FUNCTION move_reservation() RETURNS TRIGGER AS $move_reservation$ 
    BEGIN 
        UPDATE TIMESLOT 
        SET availability = 'false' 
        WHERE TimeSlotID = NEW.TimeSlotID;
        RETURN NULL;
    END;
$move_reservation$ LANGUAGE plpgsql;

CREATE TRIGGER move_reservation AFTER UPDATE ON RESERVATION 
    FOR EACH ROW 
    EXECUTE PROCEDURE move_reservation();