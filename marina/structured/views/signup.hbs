<div class = "popup" id = "signup"> 
    <div class = "modal-container"> 
        <div class = "modal m-0"> 
            <form class = "form" action = "/registerForm" method = "post">
                <div class = "inputs col m-0">
                    <div class="title row m-0 p-0"> 
                        <h1>
                            ΕΓΓΡΑΦΗ
                        </h1> 
                    </div>
                    <div class = "field row m-0 p-0"> 
                        <label for = "email" class = "field_name col-5 p-0"> E-mail </label>
                        <input type="email" name="email" class = "field_input col-5 p-0">
                    </div>
                    <div class = "field row m-0 p-0"> 
                        <label for = "username" class = "field_name col-5 p-0"> Username </label>
                        <input type="text" name="username" class = "field_input col-5 p-0" maxlength="16">
                    </div>
                    <div class = "field row m-0 p-0"> 
                        <label for = "fullname" class = "field_name col-5 p-0"> Όνομα </label>
                        <input type="text" name="fullname" class = "field_input col-5 p-0">
                    </div>
                    <div class = "field row m-0 p-0"> 
                        <label for = "password" class = "field_name col-5 p-0"> Κωδικός </label>
                        <input type="password" id = "password" name="password" class = "field_input col-5 p-0">
                        <div class = "checkbox_row col-5 p-0">
                            <input type = "checkbox" id = "show_pass" name = "password_toggle">
                            <label for="password_toggle">Εμφάνιση</label>
                        </div>
                    </div>
                    <div class = "error_field row m-0 p-0">
                        <p> {{message}} </p>
                    </div> 
                </div>
                <div class = "redirect row m-0 p-0">
                    <a href = "/login"> Έχω ήδη λογαριασμό &rarr;</a>
                </div>
                <div class = "redirect row m-0 p-0">
                    <a href = "/">&larr; Επιστροφή στην αρχική σελίδα </a>
                </div>
                <button type = "submit" class = "submit"> 
                    Ολοκλήρωση
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    let checkbox = document.querySelector("#show_pass");
    let password = document.querySelector("#password");
    checkbox.onclick = function() { 
        if (password.getAttribute("type") == "password") { 
            password.setAttribute("type", "text");
        }
        else { 
            password.setAttribute("type", "password");
        }
    }
</script> 