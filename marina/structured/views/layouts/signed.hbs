        <link rel="stylesheet" href="styles/navBar.css"> 
        <link rel="stylesheet" href="styles/forms.css">

        <title>{{{title}}}</title>
    </head>

    <body class = "container-fluid p-0 m-0 w-100">
        
        <!--SIDENAV-->
        <div class = "sidenav">
            <div class = "sidenav-container" state = "hidden"> 
                <div class = "sidenavbar"> 
                    <ul class = "side_button_list row m-0"> 
                        <li class = "side_navButton">
                            <a href = "/">ΑΡΧΙΚΗ</a>
                        </li>
                        <li class = "side_navButton"> 
                            <a href="/tennis">ΤΕΝΝΙΣ</a>
                        </li>
                        <li class = "side_navButton"> 
                            <a href="/spaces">ΧΩΡΟΙ</a>
                        </li>
                        <li class = "side_navButton">
                            <a href = "/booking">ΚΡΑΤΗΣΗ ΓΗΠΕΔΟΥ</a>
                        </li> 
                    </ul>
                    <ul class = "side_connection_list row m-0">
                        <li class = "side_accButton">
                            <a href="/login"><button id = "loginBtn">LOGIN</button></a>
                        </li> 
                        <li class = "side_accButton">
                            <a href="/signup"><button id = "signupBtn">SIGN UP</button></a>
                        </li> 
                    </ul>
                </div>
            </div>
        </div>
        <!--NAVIGATION BAR-->
        <nav class = "navbarGen row m-0 p-0">
            <ul class = "button_list col-10 p-0 m-0">
                <!--Home Page-->
                <li class = "navButton col-lg-2 col-md-1 col-sm-1">
                    <a href="/">ΑΡΧΙΚΗ</a> 
                </li>
                <!--Tennis Page-->
                <li class = "navButton col-lg-2 col-md-1 col-sm-1"> 
                    <a href="/tennis">ΤΕΝΝΙΣ</a>
                    <div class = "dropdown col-12 m-0 p-0">
                        <div class = "dd_content">
                            <a href = "/lessons">Μαθήματα Τέννις</a>
                        </div>
            
                        <div class = "dd_content">
                            <a href = "/tournaments">Τουρνουά Τέννις</a>
                        </div>
                    </div> 
                </li>
                <!--Facilities Page-->
                <li class = "navButton col-lg-2 col-md-1 col-sm-1"> 
                    <a href="/spaces">ΧΩΡΟΙ</a> 
                    <div class = "dropdown col-12 m-0 p-0"> 
                        <div class = "dd_content">
                            <a href = "/courts">Γήπεδα</a>
                        </div>
                        <div class = "dd_content">
                            <a href = "#">Εστιατόριο</a>
                        </div>
                    </div> 
                </li>
                <!--Booking Page-->
                <li class = "navButton col-lg-2 col-md-1 col-sm-1"> 
                    <a href="/booking">ΚΡΑΤΗΣΗ ΓΗΠΕΔΟΥ</a> 
                </li>
            </ul>
            <ul class = "connection_list col-2 p-0 m-0"> 
                <li class = "connectedButton"> 
                    <button> <p>{{userName}}</p> <i class="fa-solid fa-user"></i></button>
                </li>
            </ul>
            <button class = "collapse_button col-2 p-0 m-0"> 
                &#9776;
            </button>
        </nav>
        <!--ACCOUNT VIEW-->
        <div class = "accountmenu"> 
            <div class = "accountmenu-container"> 
                <div class = "account" state = "hidden"> 
                    <ul class = "accountChoices"> 
                        <li class = "accountChoice">
                            <a class = "choice">Τα τουρνουά μου</a>
                            <div class = "accountInfoDropdown">
                                <ul class = "accountList"> 
                                    <li class = "accountListItem"> 
                                        Hello
                                    </li>
                                    <li class = "accountListItem">
                                        Hello
                                    </li>
                                </ul>
                            </div> 
                        </li>      
                        <li class = "accountChoice"> 
                            <a class = "choice">Οι κρατήσεις μου</a>
                            <div class = "accountInfoDropdown">
                                <ul class = "accountList"> 
                                    {{#each reservations}}
                                    <li class = "accountListItem"> 
                                        Ημερομηνία: {{reservationdate}} <br>
                                        Ώρα: {{reservationtime}} <br>
                                        Γήπεδο: {{courtid}}
                                    </li>
                                    {{/each}}
                                </ul>
                            </div> 
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        {{{body}}}

        <!--FOOTER-->
        <div class = "footer row align-items-stretch p-0 m-0">
            <ul class = "sections col-lg-8 p-x-0">
                <li class = "ftrSection col m-0"> 
                    <h1> 
