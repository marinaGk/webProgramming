CREATE FUNCTION reservation_availability_change() RETURNS TRIGGER AS
$add_reservation$
    BEGIN 
        UPDATE TIMESLOT 
        SET Availability = 'false'
        WHERE NEW.TimeSlotID = TimeSlotID;
		RETURN NULL;
    END;
$add_reservation$ LANGUAGE plpgsql;
        
        
CREATE TRIGGER add_reservation AFTER INSERT ON RESERVATION 
    FOR EACH ROW 
    EXECUTE PROCEDURE reservation_availability_change();