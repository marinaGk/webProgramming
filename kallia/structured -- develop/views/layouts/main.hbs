        <div class = "popup" id = "login">
            <div class = "modal-container"> 
                <div class = "modal"> 
                    <div class = "button_row_close row m-0 p-0"> 
                        <button class = "close col-1 p-0">
                        </button> 
                    </div>
                    <form class = "form row" action = "/login">
                        <div class = "inputs col m-0">
                            <div class="title row m-0 p-0"> 
                                <h1>
                                    LOGIN
                                </h1> 
                            </div>
                            <div class = "field row m-0 p-0"> 
                                <label for = "username" class = "field_name col-5 p-0"> Username </label>
                                <input type="text" name="username" class = "field_input col-5 p-0" value = "">
                            </div>
                            <div class = "field row m-0 p-0"> 
                                <label for = "password" class = "field_name col-5 p-0"> Password </label>
                                <input type="text" name="password" class = "field_input col-5 p-0" value = "">
                            </div> 
                        </div>
                        <div class = "redirect row m-0 p-0">
                            <a> I don't have an account &rarr;</a>
                        </div>
                        <div class = "button_row_form row"> 
                            <button type = "submit" class = "submit" id = "submit"> 
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    
        <div class = "popup" id = "signup"> 
            <div class = "modal-container"> 
                <div class = "modal m-0"> 
                    <div class = "button_row_close row m-0 p-0"> 
                        <button class = "close col-1 p-0" >
                        </button> 
                    </div>
                    <form class = "form row" action = "/signup">
                        <div class = "inputs col m-0">
                            <div class="title row m-0 p-0"> 
                                <h1>
                                    SIGN UP
                                </h1> 
                            </div>
                            <div class = "field row m-0 p-0"> 
                                <label for = "email" class = "field_name col-5 p-0"> E-mail </label>
                                <input type="text" name="email" class = "field_input col-5 p-0">
                            </div>
                            <div class = "field row m-0 p-0"> 
                                <label for = "username" class = "field_name col-5 p-0"> Username </label>
                                <input type="text" name="username" class = "field_input col-5 p-0">
                            </div>
                            <div class = "field row m-0 p-0"> 
                                <label for = "firstname" class = "field_name col-5 p-0"> First name </label>
                                <input type="text" name="firstname" class = "field_input col-5 p-0">
                            </div>
                            <div class = "field row m-0 p-0"> 
                                <label for = "lastname" class = "field_name col-5 p-0"> Last name </label>
                                <input type="text" name="lastname" class = "field_input col-5 p-0">
                            </div>
                            <div class = "field row m-0 p-0"> 
                                <label for = "password" class = "field_name col-5 p-0"> Password </label>
                                <input type="text" name="password" class = "field_input col-5 p-0">
                            </div>
                            <div class = "field row m-0 p-0"> 
                                <label for = "repeat_password" class = "field_name col-5 p-0"> Repeat password </label>
                                <input type="text" name="repeat_password" class = "field_input col-5 p-0">
                            </div> 
                        </div>
                        <div class = "redirect row m-0 p-0">
                            <a> I already have an account &rarr;</a>
                        </div>
                        <div  class = "button_row_form row"> 
                            <button type = "submit" class = "submit" id = "submit"> 
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
